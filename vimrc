set smartindent
set tabstop=4
set shiftwidth=4
set expandtab
set number
inoremap {      {}<Left>
inoremap {<CR>  {<CR>}<Esc>O
inoremap {{     {
inoremap {}     {}
set modeline
set pastetoggle=<F10>
set ignorecase
set smartcase
nmap <space> zz
noremap  <buffer> <silent> k gk
noremap  <buffer> <silent> j gj
noremap  <buffer> <silent> 0 g0
noremap  <buffer> <silent> $ g$
